<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic-Tac-Toe" Height="300" Width="300">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Click="Button_Click" Tag="0,0" />
        <Button Grid.Row="0" Grid.Column="1" Click="Button_Click" Tag="0,1" />
        <Button Grid.Row="0" Grid.Column="2" Click="Button_Click" Tag="0,2" />

        <Button Grid.Row="1" Grid.Column="0" Click="Button_Click" Tag="1,0" />
        <Button Grid.Row="1" Grid.Column="1" Click="Button_Click" Tag="1,1" />
        <Button Grid.Row="1" Grid.Column="2" Click="Button_Click" Tag="1,2" />

        <Button Grid.Row="2" Grid.Column="0" Click="Button_Click" Tag="2,0" />
        <Button Grid.Row="2" Grid.Column="1" Click="Button_Click" Tag="2,1" />
        <Button Grid.Row="2" Grid.Column="2" Click="Button_Click" Tag="2,2" />

    </Grid>
</Window>
